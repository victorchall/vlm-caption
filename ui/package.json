{
  "name": "vlm-caption-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "electron-is-dev": "^2.0.0",
    "wait-on": "^7.2.0",
    "portfinder": "^1.0.32"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron public/electron.js",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron public/electron.js\"",
    "build:electron": "python ../build_backend.py && npm run build && electron-builder",
    "build:backend": "python ../build_backend.py"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.vlm.caption",
    "productName": "VLM Caption",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js"
    ],
    "extraResources": [
      {
        "from": "public/backend",
        "to": "backend"
      }
    ],
    "extraMetadata": {
      "name": "vlm-caption"
    },
    "compression": "store",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "win": {
      "target": {
        "target": "nsis",
        "arch": ["x64"]
      },
      "icon": "build/icon.ico",
      "artifactName": "VLM Caption Setup v${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "differentialPackage": false
    }
  }
}
